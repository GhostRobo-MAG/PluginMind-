# PluginMind Backend - Development Environment Configuration
# Developer-friendly settings with relaxed security for local development

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=PluginMind-Dev
APP_VERSION=1.0.0-dev

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite for easy local development (can be changed to PostgreSQL)
DATABASE_URL=sqlite:///./pluginmind_dev.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# Development API keys (use your own)
OPENAI_API_KEY=your-development-openai-key
GROK_API_KEY=your-development-grok-key
OPENAI_MODEL_DEFAULT=gpt-3.5-turbo
GROK_MODEL_DEFAULT=grok-beta

# =============================================================================
# SECURITY CONFIGURATION  
# =============================================================================
# Development OAuth (use test credentials)
GOOGLE_CLIENT_ID=test-client-id
JWT_SECRET=ZGV2ZWxvcG1lbnQtand0LXNlY3JldC1mb3ItdGVzdGluZw==
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=1440

# Relaxed CORS for development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Security headers optional in development
SECURITY_HEADERS_ENABLED=false
CSP_ENABLED=false

# =============================================================================
# PERFORMANCE & RATE LIMITING
# =============================================================================
# Relaxed rate limits for development
RATE_LIMIT_REQUESTS_PER_MINUTE=300
RATE_LIMIT_BURST_SIZE=50
RATE_LIMIT_STORAGE=memory

# Development-friendly request limits
MAX_REQUEST_SIZE=5242880
MAX_UPLOAD_SIZE=52428800

# Fast timeouts for development
REQUEST_TIMEOUT=15
AI_SERVICE_TIMEOUT=60
DATABASE_TIMEOUT=5

# =============================================================================
# CACHING & REDIS
# =============================================================================
# Optional Redis for development (can use memory caching)
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=
REDIS_SSL=false

# Short cache TTL for development
CACHE_DEFAULT_TTL=300
CACHE_AI_RESULTS_TTL=600
CACHE_USER_SESSION_TTL=3600

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Verbose logging for development
LOG_LEVEL=debug
LOG_FORMAT=structured
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/dev.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=7

# Development monitoring (optional)
OTEL_ENABLED=false
OTEL_SERVICE_NAME=pluginmind-backend-dev

# Quick health checks
HEALTH_CHECK_TIMEOUT=2
HEALTH_CHECK_INTERVAL=10

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
# Development-specific settings
DEV_RELOAD=true
DEV_DEBUG_TOOLBAR=true
DEV_MOCK_AI_SERVICES=false
DEV_SEED_DATA=true

# Uvicorn settings for development
WEB_CONCURRENCY=1
WORKER_CLASS=uvicorn.workers.UvicornWorker

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable all features in development
FEATURE_DOCUMENT_SUMMARIZER=true
FEATURE_CHATBOT_BACKEND=true
FEATURE_SEO_GENERATOR=true
FEATURE_ANALYTICS_TRACKING=false
FEATURE_USER_REGISTRATION=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database
TEST_DATABASE_URL=sqlite:///./test.db
TEST_SKIP_AUTH=true
TEST_MOCK_EXTERNAL_APIS=true

# =============================================================================
# DEVELOPMENT VALIDATION
# =============================================================================
# Relaxed validation for development
CONFIG_VALIDATION_STRICT=false
REQUIRED_ENV_CHECK=false
STARTUP_HEALTH_CHECK=true