# PluginMind Backend - Docker Environment Configuration
# Copy to .env for local development or customize for your deployment

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_TARGET=development
SOURCE_MOUNT=./:/app
MOUNT_OPTIONS=delegated
RESTART_POLICY=unless-stopped
BACKEND_PORT=8000

# Health Check Configuration
HEALTH_ENDPOINT=health

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (default for Docker)
DATABASE_URL=postgresql://pluginmind:pluginmind@postgres:5432/pluginmind_db
POSTGRES_DB=pluginmind_db
POSTGRES_USER=pluginmind
POSTGRES_PASSWORD=pluginmind
POSTGRES_PORT=5432

# =============================================================================
# AI Service API Keys (REQUIRED)
# =============================================================================
OPENAI_API_KEY=your-openai-key-here
GROK_API_KEY=your-grok-key-here

# =============================================================================
# Authentication Configuration (REQUIRED)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
JWT_SECRET=your-base64-encoded-jwt-secret

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Optional: Supabase Integration
# =============================================================================
SUPABASE_URL=
SUPABASE_ANON_KEY=

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PORT=6379
REDIS_MAXMEMORY=256mb

# =============================================================================
# Production Gunicorn Configuration
# =============================================================================
WEB_CONCURRENCY=4
GUNICORN_TIMEOUT=300
GUNICORN_KEEPALIVE=5
GUNICORN_GRACEFUL_TIMEOUT=60

# =============================================================================
# Nginx Configuration (Production)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
SSL_CERT_PATH=./nginx/ssl