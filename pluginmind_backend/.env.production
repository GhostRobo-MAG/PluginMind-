# PluginMind Backend - Production Environment Configuration
# Secure defaults for production deployment

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
ENVIRONMENT=production
DEBUG=false
APP_NAME=PluginMind
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use PostgreSQL in production - set via deployment system
# DATABASE_URL=postgresql://username:password@db-host:5432/pluginmind_prod
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# Set via secure environment variables in deployment
# OPENAI_API_KEY=
# GROK_API_KEY=
OPENAI_MODEL_DEFAULT=gpt-4
GROK_MODEL_DEFAULT=grok-beta

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Set via secure environment variables
# GOOGLE_CLIENT_ID=
# JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=480

# Strict CORS for production
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security headers enabled
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Production rate limits
RATE_LIMIT_REQUESTS_PER_MINUTE=120
RATE_LIMIT_BURST_SIZE=20
RATE_LIMIT_STORAGE=redis

# Request limits
MAX_REQUEST_SIZE=2097152
MAX_UPLOAD_SIZE=20971520

# Production timeouts
REQUEST_TIMEOUT=60
AI_SERVICE_TIMEOUT=180
DATABASE_TIMEOUT=15

# =============================================================================
# CACHING & REDIS
# =============================================================================
# Production Redis configuration
# REDIS_URL=redis://redis-host:6379/0
# REDIS_PASSWORD=
REDIS_SSL=true

# Optimized cache TTL for production
CACHE_DEFAULT_TTL=7200
CACHE_AI_RESULTS_TTL=14400
CACHE_USER_SESSION_TTL=28800

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=warning
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/pluginmind/app.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=90

# Production monitoring
OTEL_ENABLED=true
OTEL_SERVICE_NAME=pluginmind-backend-prod
# OTEL_EXPORTER_OTLP_ENDPOINT=

# Health checks
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================
# Gunicorn production settings
WEB_CONCURRENCY=8
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
MAX_REQUESTS=2000
MAX_REQUESTS_JITTER=100

# Production timeouts
GUNICORN_TIMEOUT=600
GUNICORN_KEEPALIVE=10
GUNICORN_GRACEFUL_TIMEOUT=120

# TLS enabled in production
TLS_ENABLED=true
# TLS_CERT_PATH=/etc/ssl/certs/pluginmind.crt
# TLS_KEY_PATH=/etc/ssl/private/pluginmind.key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_DOCUMENT_SUMMARIZER=true
FEATURE_CHATBOT_BACKEND=true
FEATURE_SEO_GENERATOR=true
FEATURE_ANALYTICS_TRACKING=true
FEATURE_USER_REGISTRATION=true

# =============================================================================
# PRODUCTION VALIDATION
# =============================================================================
CONFIG_VALIDATION_STRICT=true
REQUIRED_ENV_CHECK=true
STARTUP_HEALTH_CHECK=true