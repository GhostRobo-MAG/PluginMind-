# PluginMind Backend - Environment Configuration Template
# Copy to .env and customize for your deployment environment

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
# Options: development, staging, production, testing
ENVIRONMENT=development

# Debug mode (disable in production)
DEBUG=true

# Application settings
APP_NAME=PluginMind
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-Powered Processing Platform

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary database URL - supports PostgreSQL and SQLite
# PostgreSQL (recommended for production):
DATABASE_URL=postgresql://username:password@localhost:5432/pluginmind_db

# SQLite (development/testing):
# DATABASE_URL=sqlite:///./pluginmind.db

# Database connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# AI SERVICE API KEYS (REQUIRED)
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here
OPENAI_MODEL_DEFAULT=gpt-4
OPENAI_MAX_TOKENS=4000

# Grok Configuration  
GROK_API_KEY=your-grok-api-key-here
GROK_MODEL_DEFAULT=grok-beta
GROK_MAX_TOKENS=4000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Configuration
JWT_SECRET=your-base64-encoded-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=1440

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10
RATE_LIMIT_STORAGE=memory

# Request size limits (bytes)
MAX_REQUEST_SIZE=1048576
MAX_UPLOAD_SIZE=10485760

# Timeout configurations (seconds)
REQUEST_TIMEOUT=30
AI_SERVICE_TIMEOUT=120
DATABASE_TIMEOUT=10

# =============================================================================
# CACHING & REDIS (OPTIONAL)
# =============================================================================
# Redis configuration for caching and sessions
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# Cache TTL settings (seconds)
CACHE_DEFAULT_TTL=3600
CACHE_AI_RESULTS_TTL=7200
CACHE_USER_SESSION_TTL=86400

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=structured
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/pluginmind.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# OpenTelemetry monitoring (optional)
OTEL_ENABLED=false
OTEL_SERVICE_NAME=pluginmind-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Health check settings
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# SUPABASE INTEGRATION (OPTIONAL)
# =============================================================================
# Supabase configuration for additional features
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# =============================================================================
# EMAIL & NOTIFICATIONS (OPTIONAL)
# =============================================================================
# SMTP configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Notification settings
NOTIFICATIONS_ENABLED=false
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
FEATURE_DOCUMENT_SUMMARIZER=true
FEATURE_CHATBOT_BACKEND=true
FEATURE_SEO_GENERATOR=true
FEATURE_ANALYTICS_TRACKING=false
FEATURE_USER_REGISTRATION=false

# =============================================================================
# PRODUCTION DEPLOYMENT SETTINGS
# =============================================================================
# Gunicorn worker configuration
WEB_CONCURRENCY=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Timeout settings
GUNICORN_TIMEOUT=300
GUNICORN_KEEPALIVE=5
GUNICORN_GRACEFUL_TIMEOUT=60

# TLS/SSL Configuration
TLS_ENABLED=false
TLS_CERT_PATH=/etc/ssl/certs/pluginmind.crt
TLS_KEY_PATH=/etc/ssl/private/pluginmind.key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-specific settings
DEV_RELOAD=true
DEV_DEBUG_TOOLBAR=true
DEV_MOCK_AI_SERVICES=false
DEV_SEED_DATA=false

# Testing configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_SKIP_AUTH=true
TEST_MOCK_EXTERNAL_APIS=true

# =============================================================================
# CUSTOM APPLICATION SETTINGS
# =============================================================================
# Add your custom configuration variables here
CUSTOM_FEATURE_ENABLED=false
CUSTOM_API_ENDPOINT=https://api.example.com
CUSTOM_API_KEY=your-custom-api-key

# =============================================================================
# DEPLOYMENT VALIDATION
# =============================================================================
# These settings help validate proper configuration
CONFIG_VALIDATION_STRICT=true
REQUIRED_ENV_CHECK=true
STARTUP_HEALTH_CHECK=true